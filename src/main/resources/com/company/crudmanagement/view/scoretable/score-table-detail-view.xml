<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://scoreTableDetailView.title"
      focusComponent="form">
    <data>
        <collection id="studentsDc" class="com.company.crudmanagement.entity.Student">
            <loader id="studentsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Student e
                    order by e.name asc]]>
                </query>
            </loader>
            <fetchPlan extends="_base"/>
        </collection>
        <instance id="scoreTableDc"
                  class="com.company.crudmanagement.entity.ScoreTable">
            <fetchPlan extends="_base">
                <property name="student" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="scoreTableDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="scoreTableDc">
            <textField id="nameSubjectField" property="nameSubject"/>
            <textField id="scoreField" property="score"/>
            <entityComboBox id="studentField" property="student" itemsContainer="studentsDc"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>
